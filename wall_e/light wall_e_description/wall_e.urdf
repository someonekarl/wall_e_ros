<?xml version="1.0" encoding="utf-8"?>
<robot name="wall_e">
  <arg name="wheel_mass" default="2e-3"/>
  <arg name="wheel_ixx" default="8.87e-6"/>
  <arg name="wheel_izz" default="2.4e-6"/>

  <link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 -0.1" />
      <mass value="0.03" />
      <inertia 
        ixx="0.00012" ixy="0.0" ixz="0.0" 
        iyy="0.00012" iyz="0.0" 
        izz="0.00012" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.2" />
      <geometry>
	<sphere radius="0.1" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.2" />
      <geometry>  
        <sphere radius="0.1" />
      </geometry>
      <material name="blue">
	<color rgba="0 0 0.8 1" />
      </material>
    </visual>
  </link>
  
  <link name="body_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.21" />
      <mass value="0.001" />
      <inertia 
        ixx="0.0000181333" ixy="0.0" ixz="0.0" 
        iyy="0.0000156" iyz="0.0" 
        izz="0.0000241333" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.21" />
      <geometry>
	<box size="0.24 0.36 0.4" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>  
        <mesh filename="package://wall_e_description/meshes/walle.dae" scale="0.25 0.25 0.25"/>
      </geometry>
    </visual>
  </link>    

  <joint name="body_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_link" />
    <child link="body_link" />
    <axis xyz="0 0 0" />
    <limit effort="10.0" velocity="0.1" lower="-1e+16" upper="1e+16" />
  </joint>

  <link name="left_drive_wheel_link">
    <inertial>
      <origin rpy="0 1.570796 0" xyz="0 0 0" />
      <mass value="$(arg wheel_mass)" />
      <inertia 
        ixx="$(arg wheel_ixx)" ixy="0.0" ixz="0.0" 
        iyy="$(arg wheel_ixx)" iyz="0.0" 
        izz="$(arg wheel_izz)" />
    </inertial>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0 0 0" />
      <geometry>
	<cylinder radius="0.12" length="0.1" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>  
        <mesh filename="package://wall_e_description/meshes/walle_wheel.dae" scale="0.25 0.25 0.25"/>
      </geometry>
    </visual>
  </link>

   <joint name="left_drive_wheel_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0.18 0 0.12" />
    <parent link="body_link" />
    <child link="left_drive_wheel_link" />
    <axis xyz="1 0 0" />
  </joint>

  <link name="right_drive_wheel_link">
    <inertial>
      <origin rpy="0 1.570796 0" xyz="0 0 0" />
      <mass value="$(arg wheel_mass)" />
      <inertia 
        ixx="$(arg wheel_ixx)" ixy="0.0" ixz="0.0" 
        iyy="$(arg wheel_ixx)" iyz="0.0" 
        izz="$(arg wheel_izz)" />
    </inertial>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0 0 0" />
      <geometry>
	<cylinder radius="0.12" length="0.1" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>  
        <mesh filename="package://wall_e_description/meshes/walle_wheel.dae" scale="0.25 0.25 0.25"/>
      </geometry>
    </visual>
  </link>

   <joint name="right_drive_wheel_joint" type="continuous">
    <origin rpy="0 0 0" xyz="-0.18 0 0.12" />
    <parent link="body_link" />
    <child link="right_drive_wheel_link" />
    <axis xyz="1 0 0" />
  </joint>
  
  <link name="imu_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.000001"/>
      <inertia 
        ixx="4e-9" ixy="0.0" ixz="0.0" 
        iyy="4e-9" iyz="0.0" 
        izz="4e-9" />
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="body_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <link name="hokuyo_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.000001"/>
      <inertia 
        ixx="4e-9" ixy="0.0" ixz="0.0" 
        iyy="4e-9" iyz="0.0" 
        izz="4e-9" />
    </inertial>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <parent link="body_link"/>
    <child link="hokuyo_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>
</robot>
